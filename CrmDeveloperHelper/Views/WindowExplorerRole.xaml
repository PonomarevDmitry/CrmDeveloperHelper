                <MenuItem Header="Open Dependent Components in Explorer" Click="mIOtherPrivilegeOpenDependentComponentsInExplorer_Click" />

                <Separator/>
                <MenuItem Header="Open Solutions List with Component in Explorer" Click="mIOtherPrivilegeOpenSolutionsContainingComponentInExplorer_Click" />
            </ContextMenu>

        </ResourceDictionary>
    </src:WindowWithSolutionComponentDescriptor.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />

            <RowDefinition Height="100*" />

            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ToolBar Grid.Row="0">
            <Button x:Name="btnRefreshRoles" HorizontalAlignment="Left" Click="btnRefreshRoles_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Width="16" Height="16" Source="{StaticResource ImageRefresh}" />
                    <TextBlock>Refresh Roles</TextBlock>
                </StackPanel>
            </Button>

            <Separator Margin="20,0" />
            <Button x:Name="btnSaveRoleChanges" Content="Save Role Changes" Click="mISaveRoleChanges_Click" />

            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0" />
            <Menu VerticalAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}">
                <MenuItem x:Name="mIClearCache" Header="Clear Cache" VerticalAlignment="Center" VerticalContentAlignment="Center">

                    <MenuItem.Icon>
                        <Image Width="16" Height="16" Source="{StaticResource ImageRefresh}" />
                    </MenuItem.Icon>

                    <MenuItem Header="Clear Entity and Other Privileges Cache and Refresh" ToolTip="Clear Current Connection Entity and Other Privileges Cache and Refresh" Click="mIClearEntityCacheAndRefresh_Click" />

                    <Separator />
                    <MenuItem Header="Clear All Connections Entity and Other Privileges Cache and Refresh" Click="mIClearAllConnectionsEntityCacheAndRefresh_Click" />

                </MenuItem>
            </Menu>

        </ToolBar>

        <Grid Grid.Row="1" Margin="5" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="columnRole" Width="600" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="100*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />

                    <RowDefinition Height="100*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="100*" />
                    </Grid.ColumnDefinitions>

                    <Label Content="Filter" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0" />
                    <TextBox x:Name="txtBFilterRole" KeyDown="txtBFilterRole_KeyDown" Grid.Row="0" Grid.Column="1" />
                </Grid>

                <DataGrid x:Name="lstVwSecurityRoles" Grid.Row="1" Margin="5" AutoGenerateColumns="False" SelectionMode="Extended" IsReadOnly="True" SelectionUnit="FullRow" CanUserResizeRows="False" HeadersVisibility="Column" MouseDoubleClick="lstVwEntity_MouseDoubleClick" SelectionChanged="lstVwSecurityRoles_SelectionChanged" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Grid.Column="2">
                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.ItemContainerStyle>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Setter Property="ContextMenu" Value="{StaticResource listContextMenuRole}" />
                        </Style>
                    </DataGrid.ItemContainerStyle>
                    <DataGrid.Columns>

                        <DataGridTextColumn Header="Role Name" Width="200" Binding="{Binding Name, Mode=OneTime}" />
                        <DataGridTextColumn Header="RoleTemplate" Width="200" Binding="{Binding RoleTemplateName, Mode=OneTime}" />
                        <DataGridTextColumn Header="BusinessUnit" Width="200" Binding="{Binding BusinessUnitId.Name, Mode=OneTime}" />

                        <DataGridCheckBoxColumn Width="Auto" Binding="{Binding Path=IsCustomizable.Value, Mode=OneTime}" IsReadOnly="True" CanUserResize="False">
                            <DataGridCheckBoxColumn.ElementStyle>
                                <Style TargetType="CheckBox">
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                    <Setter Property="IsEnabled" Value="False" />
                                </Style>
                            </DataGridCheckBoxColumn.ElementStyle>
                            <DataGridCheckBoxColumn.Header>
                                <Label Content="Cust" Margin="0" Padding="0" ToolTip="Is Customizable" />
                            </DataGridCheckBoxColumn.Header>
                        </DataGridCheckBoxColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

            <TabControl Grid.Column="2">

                <TabItem Header="Users">
                    <Grid Margin="0">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />

                            <RowDefinition Height="Auto" />

                            <RowDefinition Height="100*" />
                        </Grid.RowDefinitions>

                        <ToolBar Grid.Row="0" Margin="0">
                            <Button x:Name="btnRefreshSystemUsers" HorizontalAlignment="Left" Click="btnRefreshSystemUsers_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="16" Height="16" Source="{StaticResource ImageRefresh}" />
                                    <TextBlock>Refresh Users</TextBlock>
                                </StackPanel>
                            </Button>

                            <Separator Margin="20,0" />
                            <Button x:Name="btnAssignRoleToUser" Content="Assing Role to User" Click="btnAssignRoleToUser_Click" />

                            <Separator Margin="20,0" />
                            <Button x:Name="btnRemoveRoleFromUser" IsEnabled="False" Content="Remove Role from User" Click="btnRemoveRoleFromUser_Click" />
                        </ToolBar>

                        <Grid Grid.Row="1" Margin="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="50*" />
                            </Grid.ColumnDefinitions>

                            <Label Content="Filter" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0" />
                            <TextBox x:Name="txtBFilterSystemUser" KeyDown="txtBFilterSystemUser_KeyDown" Grid.Row="0" Grid.Column="1" />
                        </Grid>

                        <DataGrid x:Name="lstVwSystemUsers" Grid.Row="2" Margin="5" IsReadOnly="True" AutoGenerateColumns="False" SelectionMode="Extended" SelectionUnit="FullRow" MouseDoubleClick="lstVwEntity_MouseDoubleClick" SelectionChanged="lstVwSystemUsers_SelectionChanged" CanUserResizeRows="False" HeadersVisibility="Column" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" DockPanel.Dock="Top">
                            <DataGrid.Resources>
                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.ItemContainerStyle>
                                <Style TargetType="{x:Type DataGridRow}">
                                    <Setter Property="ContextMenu" Value="{StaticResource listContextMenuSystemUser}" />
                                </Style>
                            </DataGrid.ItemContainerStyle>
                            <DataGrid.Columns>

                                <DataGridTextColumn Header="Domain Name" Width="120" Binding="{Binding DomainName, Mode=OneTime}" />

                                <DataGridTextColumn Header="FullName" Width="260" Binding="{Binding FullName, Mode=OneTime}" />

                                <DataGridTextColumn Header="BusinessUnit" Width="120" Binding="{Binding BusinessUnitId.Name, Mode=OneTime}" />

                                <DataGridCheckBoxColumn Width="Auto" Binding="{Binding IsDisabled, Mode=OneTime}" CanUserResize="False">
                                    <DataGridCheckBoxColumn.Header>
                                        <Label Content="Dis" Margin="0" Padding="0" ToolTip="IsDisabled" />
                                    </DataGridCheckBoxColumn.Header>
                                </DataGridCheckBoxColumn>

                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <TabItem Header="Teams">
                    <Grid Margin="0">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />

                            <RowDefinition Height="Auto" />

                            <RowDefinition Height="100*" />
                        </Grid.RowDefinitions>

                        <ToolBar Grid.Row="0" Margin="0">
                            <Button x:Name="btnRefreshTeams" HorizontalAlignment="Left" Click="btnRefreshTeams_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="16" Height="16" Source="{StaticResource ImageRefresh}" />
                                    <TextBlock>Refresh Teams</TextBlock>
                                </StackPanel>
                            </Button>

                            <Separator Margin="20,0" />
                            <Button x:Name="btnAssignRoleToTeam" Content="Assing Role to Team" Click="btnAssignRoleToTeam_Click" />

                            <Separator Margin="20,0" />
                            <Button x:Name="btnRemoveRoleFromTeam" IsEnabled="False" Content="Remove Role from Team" Click="btnRemoveRoleFromTeam_Click" />
                        </ToolBar>

                        <Grid Grid.Row="1" Margin="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="50*" />
                            </Grid.ColumnDefinitions>

                            <Label Content="Filter" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0" />
                            <TextBox x:Name="txtBFilterTeams" KeyDown="txtBFilterTeams_KeyDown" Grid.Row="0" Grid.Column="1" />
                        </Grid>

                        <DataGrid x:Name="lstVwTeams" Grid.Row="2" Margin="5" AutoGenerateColumns="False" SelectionMode="Extended" IsReadOnly="True" SelectionUnit="FullRow" CanUserResizeRows="False" HeadersVisibility="Column" MouseDoubleClick="lstVwEntity_MouseDoubleClick" SelectionChanged="LstVwTeams_SelectionChanged" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Grid.Column="2">
                            <DataGrid.Resources>
                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.ItemContainerStyle>
                                <Style TargetType="{x:Type DataGridRow}">
                                    <Setter Property="ContextMenu" Value="{StaticResource listContextMenuTeam}" />
                                </Style>
                            </DataGrid.ItemContainerStyle>
                            <DataGrid.Columns>

                                <DataGridTextColumn Header="Name" Width="200" Binding="{Binding Name, Mode=OneTime}" />

                                <DataGridCheckBoxColumn Width="Auto" Binding="{Binding IsDefault, Mode=OneTime}" CanUserResize="False">
                                    <DataGridCheckBoxColumn.Header>
                                        <Label Content="D" Margin="0" Padding="0" ToolTip="IsDefault" />
                                    </DataGridCheckBoxColumn.Header>
                                </DataGridCheckBoxColumn>

                                <DataGridTextColumn Header="BusinessUnit" Width="200" Binding="{Binding BusinessUnitId.Name, Mode=OneTime}" />

                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <TabItem Header="Entity Privileges">
                    <Grid Margin="0">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />

                            <RowDefinition Height="Auto" />

                            <RowDefinition Height="100*" />
                        </Grid.RowDefinitions>

                        <ToolBar Grid.Row="0" Margin="0">
                            <Button x:Name="btnRefreshEntites" HorizontalAlignment="Left" Click="btnRefreshEntites_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="16" Height="16" Source="{StaticResource ImageRefresh}" />
                                    <TextBlock>Refresh Entity Privileges</TextBlock>
                                </StackPanel>
                            </Button>

                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0" />
                            <Menu Background="{x:Null}">
                                <MenuItem Header="Open Window">

                                    <MenuItem x:Name="miExplorers" Header="Open Entity Information" />

                                    <Separator />
                                    <MenuItem x:Name="miCompareOrganizations" Header="Compare Information with other Organization" />

                                </MenuItem>
                            </Menu>

                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0" />
                            <Menu Background="{x:Null}">

                                <MenuItem Header="Set Privilege">
                                    <MenuItem Header="All">
                                        <MenuItem Header="None" Click="mISetAttributeEntityPrivilegeAll_Click">
                                            <MenuItem.Icon>
                                                <Image Width="16" Height="16" Source="{StaticResource BitmapImageNone}" />
                                            </MenuItem.Icon>
                                            <MenuItem.Tag>
                                                <model:PrivilegeDepthExtended>None</model:PrivilegeDepthExtended>
                                            </MenuItem.Tag>
                                        </MenuItem>
                                        <MenuItem Header="Basic" Click="mISetAttributeEntityPrivilegeAll_Click">
                                            <MenuItem.Icon>
                                                <Image Width="16" Height="16" Source="{StaticResource BitmapImageBasic}" />
                                            </MenuItem.Icon>
                                            <MenuItem.Tag>
                                                <model:PrivilegeDepthExtended>Basic</model:PrivilegeDepthExtended>
                                            </MenuItem.Tag>
                                        </MenuItem>
                                        <MenuItem Header="Local" Click="mISetAttributeEntityPrivilegeAll_Click">
                                            <MenuItem.Icon>
                                                <Image Width="16" Height="16" Source="{StaticResource BitmapImageLocal}" />
                                            </MenuItem.Icon>
                                            <MenuItem.Tag>
                                                <model:PrivilegeDepthExtended>Local</model:PrivilegeDepthExtended>
                                            </MenuItem.Tag>
                                        </MenuItem>
                                        <MenuItem Header="Deep" Click="mISetAttributeEntityPrivilegeAll_Click">
                                            <MenuItem.Icon>
                                                <Image Width="16" Height="16" Source="{StaticResource BitmapImageDeep}" />
                                            </MenuItem.Icon>
                                            <MenuItem.Tag>
                                                <model:PrivilegeDepthExtended>Deep</model:PrivilegeDepthExtended>
                                            </MenuItem.Tag>
                                        </MenuItem>
                                        <MenuItem Header="Global" Click="mISetAttributeEntityPrivilegeAll_Click">
                                            <MenuItem.Icon>
                                                <Image Width="16" Height="16" Source="{StaticResource BitmapImageGlobal}" />
                                            </MenuItem.Icon>
                                            <MenuItem.Tag>
                                                <model:PrivilegeDepthExtended>Global</model:PrivilegeDepthExtended>
                                            </MenuItem.Tag>
                                        </MenuItem>
                                    </MenuItem>
                                    <Separator />

                                    <MenuItem Header="Create">
                                        <MenuItem Header="None" Click="mISetAttributeEntityPrivilegeCreate_Click">
                                            <MenuItem.Icon>
                                                <Image Width="16" Height="16" Source="{StaticResource BitmapImageNone}" />
                                            </MenuItem.Icon>
                                            <MenuItem.Tag>
                                                <model:PrivilegeDepthExtended>None</model:PrivilegeDepthExtended>
                                            </MenuItem.Tag>
                                        </MenuItem>
                                        <MenuItem Header="Basic" Click="mISetAttributeEntityPrivilegeCreate_Click">
                                            <MenuItem.Icon>
                                                <Image Width="16" Height="16" Source="{StaticResource BitmapImageBasic}" />
                                            </MenuItem.Icon>
