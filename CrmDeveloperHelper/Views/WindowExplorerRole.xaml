                    <Separator/>
                    <MenuItem Header="Copy to Clipboard Role Name" Click="mICopyRoleNameToClipboard_Click" />
                    
                    <Separator/>
                    <MenuItem Header="Copy to Clipboard Role Template Name" Click="mICopyRoleTemplateNameToClipboard_Click" />
                    <MenuItem Header="Copy to Clipboard Role Template Id" Click="mICopyRoleTemplateIdToClipboard_Click" />

                    <Separator/>
                    <MenuItem Header="Copy to Clipboard Role BusinessUnit Name" Click="mICopyRoleBusinessUnitNameToClipboard_Click" />
                    <MenuItem Header="Copy to Clipboard Role BusinessUnit Id" Click="mICopyRoleBusinessUnitIdToClipboard_Click" />
                </MenuItem>

                <Separator/>
                <MenuItem Header="Change Role in Editor" Click="btnChangeEntityInEditor_Click" />

                <Separator/>
                <MenuItem x:Uid="contMnAddToSolutionLast" Header="Add to Last Crm Solution" />
