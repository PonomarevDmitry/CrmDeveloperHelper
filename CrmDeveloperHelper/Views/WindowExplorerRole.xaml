                                <StackPanel Orientation="Horizontal">
                                    <Image Width="16" Height="16" Source="{StaticResource ImageRefresh}" />
                                    <TextBlock>Refresh Other Privileges</TextBlock>
                                </StackPanel>
                            </Button>

                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0" />
                            <Menu Background="{x:Null}">

                                <MenuItem Header="Set Privilege">
                                    <MenuItem Header="None" Click="mISetAttributeOtherPrivilegeRight_Click">
                                        <MenuItem.Icon>
                                            <Image Width="16" Height="16" Source="{StaticResource BitmapImageNone}" />
                                        </MenuItem.Icon>
                                        <MenuItem.Tag>
                                            <model:PrivilegeDepthExtended>None</model:PrivilegeDepthExtended>
                                        </MenuItem.Tag>
                                    </MenuItem>
                                    <MenuItem Header="Basic" Click="mISetAttributeOtherPrivilegeRight_Click">
                                        <MenuItem.Icon>
                                            <Image Width="16" Height="16" Source="{StaticResource BitmapImageBasic}" />
                                        </MenuItem.Icon>
                                        <MenuItem.Tag>
                                            <model:PrivilegeDepthExtended>Basic</model:PrivilegeDepthExtended>
                                        </MenuItem.Tag>
                                    </MenuItem>
                                    <MenuItem Header="Local" Click="mISetAttributeOtherPrivilegeRight_Click">
                                        <MenuItem.Icon>
                                            <Image Width="16" Height="16" Source="{StaticResource BitmapImageLocal}" />
                                        </MenuItem.Icon>
                                        <MenuItem.Tag>
                                            <model:PrivilegeDepthExtended>Local</model:PrivilegeDepthExtended>
                                        </MenuItem.Tag>
                                    </MenuItem>
                                    <MenuItem Header="Deep" Click="mISetAttributeOtherPrivilegeRight_Click">
                                        <MenuItem.Icon>
                                            <Image Width="16" Height="16" Source="{StaticResource BitmapImageDeep}" />
                                        </MenuItem.Icon>
                                        <MenuItem.Tag>
                                            <model:PrivilegeDepthExtended>Deep</model:PrivilegeDepthExtended>
                                        </MenuItem.Tag>
                                    </MenuItem>
                                    <MenuItem Header="Global" Click="mISetAttributeOtherPrivilegeRight_Click">
                                        <MenuItem.Icon>
                                            <Image Width="16" Height="16" Source="{StaticResource BitmapImageGlobal}" />
                                        </MenuItem.Icon>
                                        <MenuItem.Tag>
                                            <model:PrivilegeDepthExtended>Global</model:PrivilegeDepthExtended>
                                        </MenuItem.Tag>
                                    </MenuItem>

                                </MenuItem>
                            </Menu>
                        </ToolBar>

                        <Grid Grid.Row="1" Margin="0">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="100*" />
                                <ColumnDefinition Width="30*"  />
                            </Grid.ColumnDefinitions>

                            <Label x:Name="lblFilterOtherPrivileges" Content="Filter" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="0" />
                            <TextBox x:Name="txtBOtherPrivilegesFilter" KeyDown="txtBOtherPrivilegesFilter_KeyDown" Grid.Row="1" Grid.Column="1" />

                            <Button x:Name="btnPrivilegeFilter" Grid.Row="1" Grid.Column="2" Content="Privilege Filter" Click="btnPrivilegeFilter_Click" IsTabStop="False" />
                        </Grid>

                        <DataGrid x:Name="lstVwOtherPrivileges" Grid.Row="2" Margin="5" AutoGenerateColumns="False" SelectionMode="Extended" IsReadOnly="True" SelectionUnit="FullRow" CanUserResizeRows="False" HeadersVisibility="Column" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Grid.Column="2">
                            <DataGrid.Resources>
                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.ItemContainerStyle>
                                <Style TargetType="{x:Type DataGridRow}">
                                    <Setter Property="ContextMenu" Value="{StaticResource listContextMenuOtherPrivileges}" />
                                </Style>
                            </DataGrid.ItemContainerStyle>
                            <DataGrid.Columns>

                                <DataGridCheckBoxColumn Width="Auto" Binding="{Binding IsChanged, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" IsReadOnly="True" CanUserResize="False">
                                    <DataGridCheckBoxColumn.ElementStyle>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="IsEnabled" Value="False" />
                                        </Style>
                                    </DataGridCheckBoxColumn.ElementStyle>
                                    <DataGridCheckBoxColumn.Header>
                                        <Label Content="Ch" Margin="0" Padding="0" ToolTip="Is Changed" />
                                    </DataGridCheckBoxColumn.Header>
                                </DataGridCheckBoxColumn>

                                <DataGridTextColumn Header="Privilege Name" Width="200" Binding="{Binding Name, Mode=OneTime}" >
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Privilege Type" Width="200" Binding="{Binding PrivilegeType, Mode=OneTime}" >
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Linked Entity" Width="200" Binding="{Binding EntityLogicalName, Mode=OneTime}" >
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTemplateColumn Width="Auto" CanUserSort="True" SortMemberPath="Right" CanUserResize="False">
                                    <DataGridTemplateColumn.Header>
                                        <Label Content="R" Margin="0" Padding="0" ToolTip="Right" />
                                    </DataGridTemplateColumn.Header>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox SelectedItem="{Binding Path=Right, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding Path=IsCustomizable}" ItemsSource="{Binding Path=RightOptions}">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <Image Source="{Binding Converter={StaticResource ResourceKey=privilegeDepthConverter}}" Height="16" Width="16" MaxHeight="16" MaxWidth="16" />
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

        <StatusBar Grid.Row="2">
            <StatusBarItem x:Name="tSSLblConnectionName" Content="Connection" />
            <ComboBox x:Name="cmBCurrentConnection" IsReadOnly="True" SelectionChanged="cmBCurrentConnection_SelectionChanged" Padding="10,0" />
            <ProgressBar x:Name="tSProgressBar" Width="200" Height="15" />
            <Button x:Name="btnSetCurrentConnection" Content="Set" ToolTip="Set Current Connection" Click="btnSetCurrentConnection_Click" />
            <StatusBarItem x:Name="stBIStatus" />
        </StatusBar>
    </Grid>
</src:WindowWithSolutionComponentDescriptor>