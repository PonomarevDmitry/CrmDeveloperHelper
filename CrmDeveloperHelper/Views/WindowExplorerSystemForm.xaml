                            <Separator/>
                            <MenuItem Header="Form XML" VerticalAlignment="Center" Click="mIExportSystemFormFormXml_Click" />
                            <MenuItem Header="Form Json" VerticalAlignment="Center" Click="mIExportSystemFormFormJson_Click" />
                            
                            <Separator x:Uid="controlChangeEntityAttribute"/>
                            <MenuItem x:Uid="controlChangeEntityAttribute" Header="Change SystemForm Attribute" VerticalAlignment="Center">
                                <MenuItem Header="Form XML" VerticalAlignment="Center" Click="mIUpdateSystemFormFormXml_Click" />
                                <MenuItem Header="Form Json" VerticalAlignment="Center" Click="mIUpdateSystemFormFormJson_Click" />
                            </MenuItem>
                            
                            <Separator/>
                            <MenuItem Header="Publish SystemForm" VerticalAlignment="Center" Click="mIPublishSystemForm_Click" />
                            <MenuItem Header="Publish Entity" Click="btnPublishEntity_Click"/>

                            <Separator/>
                            <MenuItem Header="Create Entity JavaScript File JsonObject based on Form" VerticalAlignment="Center" Click="mIExportSystemFormEntityJavaScriptFileJsonObject_Click" />
                            <MenuItem Header="Create Entity JavaScript File AnonymousConstructor based on Form" VerticalAlignment="Center" Click="mIExportSystemFormEntityJavaScriptFileAnonymousConstructor_Click" />
                            <MenuItem Header="Create Entity JavaScript File TypeConstructor based on Form" VerticalAlignment="Center" Click="mIExportSystemFormEntityJavaScriptFileTypeConstructor_Click" />
                            
                            <Separator/>
                            <MenuItem Header="Download Form WebResouces" VerticalAlignment="Center" Click="mIExportSystemFormWebResources_Click" />
                            
                            <Separator/>
                            <MenuItem Header="Open Solutions Containing Component in Window" VerticalAlignment="Center" Click="mIOpenSolutionsContainingComponentInWindow_Click" />
                            
                            <Separator/>
                            <MenuItem Header="Dependent Components">
                                <MenuItem Header="Open Dependent Components in Web" VerticalAlignment="Center" Click="mIOpenDependentComponentsInWeb_Click" />
                                <Separator/>
                                <MenuItem Header="Open Dependent Components in Window" VerticalAlignment="Center" Click="mIOpenDependentComponentsInWindow_Click" />
                            </MenuItem>
                        </MenuItem>
                    </Menu>
                </ToolBarPanel>
                
                <Button Content="Close" Click="Button_Click" HorizontalAlignment="Right" DockPanel.Dock="Right"/>
            </DockPanel>
        </ToolBar>
        <StatusBar Grid.Row="5">
            <StatusBarItem x:Name="tSSLblConnectionName" Content="Connection" />
            <ComboBox x:Name="cmBCurrentConnection" SelectionChanged="cmBCurrentConnection_SelectionChanged" />
            <ProgressBar x:Name="tSProgressBar" Width="200" Height="15" />
            <Button x:Name="btnSetCurrentConnection" Content="Set" ToolTip="Set Current Connection" Click="btnSetCurrentConnection_Click"/>
            <StatusBarItem x:Name="stBIStatus" />
        </StatusBar>
    </Grid>
