                                <MenuItem x:Name="miExplorers" Header="Open Entity Information" VerticalAlignment="Center" />
                            </Menu>

                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0,10,0" />
