                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0,10,0" />
                <MenuItem Header="Compare Information with other Organization">
                    <MenuItem Header="Entity Metadata" Click="miCompareMetadataFile_Click"/>
                    <Separator/>
                    <MenuItem Header="Global OptionSets" Click="miCompareGlobalOptionSets_Click"/>
                    <Separator/>
                    <MenuItem Header="Forms" Click="miCompareSystemForms_Click"/>
                    <MenuItem Header="Views" Click="miCompareSavedQuery_Click"/>
                    <MenuItem Header="Charts" Click="miCompareSavedChart_Click"/>
                    <Separator/>
                    <MenuItem Header="Workflows" Click="miCompareWorkflows_Click"/>
                    <Separator/>
                    <MenuItem Header="ApplicationRibbon" Click="miCompareApplicationRibbon_Click"/>
                </MenuItem>
            </Menu>
        </ToolBar>
        <Label Content="Folder" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Height="23" Padding="1" VerticalContentAlignment="Center"/>
        <TextBox x:Name="txtBFolder" Text="{Binding Path=FolderForExport}" Height="23" Margin="50,38,10,0"  VerticalAlignment="Top" VerticalContentAlignment="Center" />

        <Label Content="Filter" HorizontalAlignment="Left" Margin="10,122,0,0" Padding="1" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="23"/>
        <TextBox x:Name="txtBFilterEnitity" Height="23" Margin="50,122,10,0"  VerticalAlignment="Top" KeyDown="txtBFilterEnitity_KeyDown" VerticalContentAlignment="Center" />

        <Label Content="Namespace Classes" HorizontalAlignment="Left" Margin="10,66,0,0" Padding="1" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="23"/>
        <TextBox x:Name="txtBNamespaceClasses" Text="{Binding Path=SelectedItem.NamespaceClasses}" Height="23" Margin="134,66,10,0"  VerticalAlignment="Top" VerticalContentAlignment="Center" />

        <Label Content="Namespace JavaScript" HorizontalAlignment="Left" Margin="10,94,0,0" Padding="1" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="23"/>
        <TextBox x:Name="txtBNamespaceJavaScript" Text="{Binding Path=SelectedItem.NamespaceJavaScript}" Height="23" Margin="134,94,10,0"  VerticalAlignment="Top" VerticalContentAlignment="Center" />

        <DataGrid x:Name="lstVwEntities" AutoGenerateColumns="False" Margin="10,150,10,69" SelectionMode="Single" SelectionUnit="FullRow" MouseDoubleClick="lstVwEntities_MouseDoubleClick" SelectionChanged="lstVwEntities_SelectionChanged" CanUserResizeRows="False" HeadersVisibility="Column" IsReadOnly="True" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.ItemContainerStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="ContextMenu" Value="{StaticResource listContextMenu}"/>
                </Style>
            </DataGrid.ItemContainerStyle>
            <DataGrid.Columns>

                <DataGridTextColumn Header="Entity Name" Width="260" Binding="{Binding EntityLogicalName}" />

                <DataGridTextColumn Header="Display Name" Width="260" Binding="{Binding DisplayName}" />

            </DataGrid.Columns>
        </DataGrid>
        <ToolBar Margin="0,0,0,31" VerticalAlignment="Bottom" Height="33">
            <ToolBar.Resources>
                <Style TargetType="{x:Type ToolBarPanel}">
                    <Setter Property="Orientation" Value="Vertical"/>
                </Style>
            </ToolBar.Resources>
            <DockPanel>
                <DockPanel.Resources>
                    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <Setter Property="Margin" Value="6,2" />
                        <Setter Property="Padding" Value="3" />
                    </Style>
                </DockPanel.Resources>
                <ToolBarPanel Orientation="Horizontal" >
                    <Menu VerticalAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}">
                        <MenuItem x:Name="miEntityOperations" Header="Entity Operations" VerticalAlignment="Center" VerticalContentAlignment="Center" Padding="3">
                            <MenuItem Header="Create C# Metadata File" Click="miCreateCSharpFile_Click" />
                            <Separator/>
                            <MenuItem Header="Create JavaScript Metadata File" Click="miCreateJavaScriptFile_Click" />
                            <Separator/>
                            <MenuItem Header="Export Entity Ribbon" Click="miExportEntityRibbon_Click" />
                            <Separator/>
                            <MenuItem Header="Export Entity RibbonDiffXml" Click="miExportEntityRibbonDiffXml_Click" />
